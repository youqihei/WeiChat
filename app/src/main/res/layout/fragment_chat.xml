<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
 <TextView
     app:layout_constraintTop_toTopOf="parent"
     android:layout_marginTop="10dp"
     android:id="@+id/tv_title"
     android:layout_width="match_parent"
     android:layout_height="@dimen/MainTheme_TopHeight"
     android:gravity="center"
     android:text="WeiChat"
     android:textSize="@dimen/MainTheme_TopSize"
     />
 <View
     android:layout_marginTop="10dp"
     android:id="@+id/view"
     android:layout_width="match_parent"
     android:layout_height="0.5dp"
     android:background="@color/font_title_gray"
     app:layout_constraintTop_toBottomOf="@id/tv_title"
     app:layout_constraintBottom_toTopOf="@id/ry_list"
     />
 <android.support.v7.widget.RecyclerView
     app:layout_constraintTop_toBottomOf="@id/view"
     android:id="@+id/ry_list"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     />
</android.support.constraint.ConstraintLayout>